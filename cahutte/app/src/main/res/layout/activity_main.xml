<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="202dp"
        android:layout_height="103dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cahutte"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSousTitre"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="The Game"
            android:textSize="25dp"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:text="Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:backgroundTint="#F94144"
        />

    <Button
        android:id="@+id/buttonTabScores"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:text="Tableau des scores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlay"
        android:backgroundTint="#F9C74F"
        />

    <Button
        android:id="@+id/buttonOption"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:text="Options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTabScores"
        android:backgroundTint="#43AA8B"
        />

</androidx.constraintlayout.widget.ConstraintLayout>